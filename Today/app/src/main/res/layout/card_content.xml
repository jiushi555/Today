<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="10dp">
    <RelativeLayout
        android:id="@+id/test_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/btm"/>

        <TextView
            android:id="@+id/content_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dip"
            android:textSize="12sp"
            android:textColor="#FFFFFFFF"
            android:text="haha"/>

        <ImageView
            android:id="@+id/content_bg"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/content_name"
            android:layout_marginBottom="30dip"/>

        <xml.org.today.widget.CircleImageViewUtil
            android:id="@+id/content_portrait"
            android:layout_width="34dip"
            android:layout_height="34dip"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dip"
            android:layout_above="@id/content_name"
            android:src="@drawable/user_default_photo"
             />
        <FrameLayout
            android:id="@+id/content_fly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_shadow"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:minHeight="300dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:textSize="22sp"
                tools:text="Test Text" />

            <LinearLayout
                android:id="@+id/content_link_ly"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/bg_shadow2"
                android:layout_gravity="right|top">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_link"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginRight="10dp"
                    android:textSize="12sp"
                    android:text="查看详情"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/bg_shadow2"
                android:layout_gravity="bottom|center">

                <TextView
                    android:id="@+id/content_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:text="2016-8-22"/>
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
